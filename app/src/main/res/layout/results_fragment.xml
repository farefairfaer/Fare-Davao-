<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ResultsFragment">
    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_marginStart="2dp"
        android:text="*click item to view path"/>
    <TextView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="60dp"
        android:background="#4CAF50"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="end"
        android:text="- first route to take"/>
    <TextView
        android:id="@+id/FRpathColor"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:background="#F44336"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:text="- second route to take"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/tableheading">
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Recommended Routes"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>

        <TextView
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="Regular Fare"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textAlignment="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>

        <TextView
            android:layout_width="77dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Discounted Fare"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="12sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:id="@+id/resultsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tablebg"
            android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/backBTN"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textColor="@color/darkgray"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button"
        android:text="@string/back" />


</LinearLayout>