<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/directITEM"
    android:layout_width="410dp"
    android:layout_height="40dp"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/translucentDGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pathColor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:background="#4CAF50"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/DRListVIEW"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:text="Mintal, Toril, Maa, Catalunan Grande, Sasa via JP Laurel"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/DRdistanceVIEW"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="10km"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>
        <TextView
            android:id="@+id/DRregFareVIEW"
            android:layout_width="57dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="60P"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>
        <TextView
            android:id="@+id/DRdiscFareVIEW"
            android:layout_width="77dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="10P"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>