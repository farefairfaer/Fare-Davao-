<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/indirectITEM"
    android:layout_width="410dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/translucentDGray"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/FRpathColor"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:background="#4CAF50"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:paddingTop="5dp"
        android:id="@+id/FRListVIEW"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="Mintal, "
        android:textStyle="bold"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/FRdistanceVIEW"
        android:layout_width="50dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="10.9km"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/translucentDGray"/>
    <TextView
        android:id="@+id/FRregfareVIEW"
        android:layout_width="57dp"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="60P"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/translucentDGray"/>
    <TextView
        android:id="@+id/FRdiscFareVIEW"
        android:layout_width="77dp"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="10P"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Drop off at the blue marker and ride:"
            android:textSize="12sp"
            android:textStyle="italic" />

        <View
            android:layout_width="1dp"
            android:layout_marginStart="75.7dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>
        <View
            android:layout_width="1dp"
            android:layout_marginStart="57dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/SRpathColor"
            android:layout_marginBottom="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:background="#F44336"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:paddingBottom="5dp"
            android:id="@+id/SRListVIEW"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:text="Mintal, Toril, Maa, Catalunan Grande, Sasa via JP Laurel"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/SRdistanceVIEW"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="12km"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>
        <TextView
            android:id="@+id/SRregfareVIEW"
            android:layout_marginBottom="5dp"
            android:layout_width="57dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="60P"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/translucentDGray"/>
        <TextView
            android:id="@+id/SRdiscFareVIEW"
            android:layout_marginBottom="5dp"
            android:layout_width="77dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="10P"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>